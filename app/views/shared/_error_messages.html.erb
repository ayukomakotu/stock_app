<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
        <%= pluralize("#{object.errors.count}件", "エラー") %>が発生しました
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>